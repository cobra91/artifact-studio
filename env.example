# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
AIML_API_KEY=your_aiml_api_key_here

# API URLs (optional - defaults will be used if not set)
OPENAI_API_URL=https://api.openai.com/v1
OPENROUTER_API_URL=https://openrouter.ai/api/v1
AIML_API_URL=https://api.aimlapi.com/v1

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Security Configuration
INTERNAL_API_KEY=your_internal_api_key_here
WEBHOOK_SECRET=your_webhook_secret_here
JWT_SECRET=your_jwt_secret_here

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=86400000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10

# Deployment Platform Configuration
VERCEL_AUTH_URL=https://vercel.com/oauth/authorize
NETLIFY_AUTH_URL=https://app.netlify.com/authorize
GITHUB_AUTH_URL=https://github.com/login/oauth/authorize

VERCEL_CLIENT_ID=your_vercel_client_id
NETLIFY_CLIENT_ID=your_netlify_client_id
GITHUB_CLIENT_ID=your_github_client_id

# Liveblocks Configuration
LIVEBLOCKS_SECRET_KEY=your_liveblocks_secret_key_here

# Database Configuration (if using external database)
DATABASE_URL=your_database_url_here

# Redis Configuration (for production rate limiting)
REDIS_URL=your_redis_url_here

# Monitoring and Analytics
ANALYTICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_DEPLOYMENT=true
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_COLLABORATION=true

# Debug Mode (active les logs de debug en d√©veloppement)
NEXT_PUBLIC_DEBUG=true
